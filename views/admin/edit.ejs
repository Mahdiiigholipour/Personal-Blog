<!DOCTYPE html>
<html>
  <head>
    <title>Edit Article</title>
  </head>
  <body>
    <h1>Edit Article</h1>
    <form action="/admin/edit/<%= article.id %>" method="POST">
      <input
        type="text"
        name="title"
        value="<%= article.title %>"
        required
      /><br />
      <textarea name="content" required><%= article.content %></textarea><br />
      <input
        type="date"
        name="date"
        value="<%= article.date %>"
        required
      /><br />
      <button type="submit">Update</button>
    </form>
  </body>
</html>
