<%- include("partials/header", { pageTitle: "Edit Article" }) %>

<h1>Edit Article</h1>

<form action="/admin/edit/<%= article.publishingDate %>" method="POST">
  <label>
    Title:
    <input type="text" name="title" value="<%= article.title %>" required />
  </label>

  <label>
    Content:
    <textarea name="content" rows="8" required><%= article.content %></textarea>
  </label>

  <label>
    Publishing Date:
    <input
      type="date"
      name="publishingDate"
      value="<%= article.publishingDate %>"
      required
    />
  </label>

  <button type="submit">Update</button>
</form>

<%- include("partials/footer") %>
